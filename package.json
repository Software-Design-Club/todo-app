{
  "name": "todo-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "verify:env": "node scripts/verify-env.mjs",
    "test:unit": "VITEST_SUITE=unit vitest run",
    "test:integration": "VITEST_SUITE=integration vitest run",
    "test:e2e:smoke": "playwright test --project=smoke",
    "verify:all": "npm run verify:env && npm run typecheck && npm run lint && npm run test:unit && npm run test:integration && npm run test:e2e:smoke",
    "prepare": "husky"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.7.0",
    "@next/env": "^15.1.7",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@tanstack/react-query": "^5.67.2",
    "@tanstack/react-query-devtools": "^5.67.2",
    "@tanstack/react-table": "^8.20.5",
    "@vercel/postgres": "^0.10.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.33.0",
    "lucide-react": "^0.441.0",
    "next": "^15.1.7",
    "next-auth": "^5.0.0-beta.22",
    "react": "^18",
    "react-dom": "^18",
    "resend": "^4.0.0",
    "sonner": "^2.0.1",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "type-fest": "^4.41.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "drizzle-kit": "^0.24.2",
    "eslint": "^9",
    "eslint-config-next": "^15.1.7",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "next lint --fix --file",
      "bash -c \"tsc --noEmit -p tsconfig.json\""
    ]
  }
}
